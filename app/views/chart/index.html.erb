                                </div>
                                <div class="chart-name">
                                    <h3 class="name-song"><%=@songs.find(i).name%></h3>
                                    <%= link_to(artist_path(value)) do %>
                                        <p><%=@singers.find(value).name%></p>
                                    <%end%>
									<h2><%=j+1%></h2>
                                </div>
                            </li>
							<%	
										j = j + 1
									end 
